generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client  {
  id     String  @id   @default(uuid())  //CriarÃ¡ por defoult um UUID para cada cliente
  name   String
  email  String
  phone  String 
  order  Order[]

  @@map("clients") // @@map  -> expecifica qual o nome que sera dado a tabela 
}

model Order {
  id            String  @id   @default(uuid())
  description   String
  price         Decimal
  created_at    DateTime      @default(now()) 
  client        Client  @relation(fields: [cliente_id], references: [id]) // Relacionamento
  cliente_id    String

  @@map("orders")
}
